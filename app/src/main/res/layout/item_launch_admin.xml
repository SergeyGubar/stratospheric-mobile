<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        android:elevation="4dp"
        android:layout_height="wrap_content" >
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_launch_admin_name_text_view"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="18sp"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" tools:text="Name "/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_launch_admin_coords_text_view"
                app:layout_constraintStart_toStartOf="@+id/item_launch_admin_name_text_view"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/item_launch_admin_name_text_view"
                tools:text="Latitude / Longitude" android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_launch_admin_time_text_view"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="18sp" tools:text="18:00"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/item_launch_admin_remove_image_view"
                app:layout_constraintTop_toTopOf="@+id/item_launch_admin_remove_image_view"
                app:layout_constraintBottom_toBottomOf="@+id/item_launch_admin_remove_image_view"/>
        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp" app:srcCompat="@drawable/ic_close_red_24dp"
                android:id="@+id/item_launch_admin_remove_image_view"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
